{
  "typescript": {
    "formatter": "prettier",
    "formatOnSave": true
  },
  "javascript": {
    "formatter": "prettier",
    "formatOnSave": true
  },
  "tailwindcss": {
    "experimental": {
      "classRegex": ["[a-zA-Z]*class[a-zA-Z]*=\"([^\"]*)\""]
    }
  },
  "editor": {
    "tabSize": 2,
    "insertSpaces": true,
    "detectIndentation": true,
    "trimTrailingWhitespace": true,
    "insertFinalNewline": true
  },
  "search": {
    "exclude": [
      "**/node_modules",
      "**/dist",
      "**/build",
      "**/.next",
      "**/coverage"
    ]
  }
}